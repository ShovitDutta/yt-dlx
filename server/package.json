{
  "name": "server",
  "version": "13.0.0",
  "license": "Apache-2.0",
  "author": "yt-dlx <yt-dlx@proton.me>",
  "description": "Effortless Audio-Video Downloader And Streamer!",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yt-dlx/yt-dlx.git"
  },
  "scripts": {
    "start": "tsc && node build/index.js",
    "build": "tsc && pkg . --out-path package",
    "dev": "concurrently \"tsc --watch\" \"nodemon build/index.js\"",
    "postinstall": "node public/cprobe-win.js && node public/cprobe-mac.js && node public/cprobe-linux.js && shx chmod +x ."
  },
  "dependencies": {
    "async-retry": "^1.3.3",
    "colors": "^1.4.0",
    "dotenv": "^16.4.5",
    "fs-extra": "^11.2.0",
    "shx": "^0.3.4",
    "ws": "^8.17.0",
    "yt-dlx": "^13.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.8",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.14.2",
    "@types/ws": "^8.5.10",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.3",
    "pkg": "^5.8.1",
    "typescript": "^5.4.5"
  },
  "bin": "build/index.js",
  "pkg": {
    "scripts": [
      "build/**/*.js"
    ],
    "assets": [
      "public/**/*",
      "public/cprobe.exe",
      "public/cprobe_macos",
      "public/cprobe_linux"
    ],
    "targets": [
      "node18-win-x64",
      "node18-macos-x64",
      "node18-linux-x64"
    ],
    "icon": "public/icon.ico"
  }
}
